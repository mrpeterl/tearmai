{
    "name": "Téarmaí",
    "version": "1.0",
    "description": "Foclóir a bhaineann usáid as tearma.ie",
    "permissions": [
        "storage",
        "declarativeContent",
        "activeTab",
        "http://www.syzible.com/"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/logo16.png",
            "32": "images/logo32.png",
            "48": "images/logo48.png",
            "128": "images/logo128.png"
          },
          "icons": {
            "16": "images/logo16.png",
            "32": "images/logo32.png",
            "48": "images/logo48.png",
            "128": "images/logo128.png"
          }
    },
    "manifest_version": 2
}